
@{
    ViewBag.Title = "Grade";
    ViewBag.Root = "Master"; 
     Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card info-card  ">

            <div class="card-body" id="divData">
                <div class="row ">
                    <div class="col-lg-6 ">
                        <button class="btn  btn-primary btn-sm" id="btnAdd" onclick="AddNewData(0)" data-toggle="modal" data-target="#myModal" type="button"><i class="bi bi-plus-square"></i> Add</button>
                    </div>                                                                                                                  
                    <div class="col-lg-6 text-end">
                        <button class="btn  btn-success btn-sm" id="btnExportExcel" type="button"><i class="bi bi-file-earmark-excel-fill"></i> Export </button>
                    </div>
                </div>


                <div class="row pt-3">
                    <div class="col-lg-12">
                        <table id="tableID" class="table table-striped table-bordered" style="width:100% ;font-family:'Calibri';">
                            <thead>
                                <tr role="row">

                                    <th style="text-align:center;">
                                        Kode Grade
                                    </th>
                                    <th style="text-align:center;">
                                        Gaji Pokok (Rp)
                                    </th>
                                    <th style="text-align:center;">
                                        Action
                                    </th>
                                </tr>
                            </thead>

                            <tbody></tbody>
                        </table>
                    </div>
                </div>

            </div>

            <div class="card-body" id="divForm">
                <form id="formData">
                    <input type="text" style="display:none" name="txtIdMasterGrade" id="txtIdMasterGrade">
                    <div class="body">
                        <div class="row mb-3">
                            <div class="col-sm-9">
                                <button type="button" class="btn btn-danger" id="backData" onclick="backForm()"><i class="bi bi-arrow-left-square"></i> Back</button>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="cboKodeGrade" class="col-sm-3 col-form-label">Kode Grade</label>
                            <div class="col-sm-9">
                                <select id="cboKodeGrade" name="cboKodeGrade" required class="select2 form-select" style="width:100%">
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="txtGajiPokok" class="col-sm-3 col-form-label">Gaji Pokok (Rp)</label>
                            <div class="col-sm-9">
                                <input type="text" id="txtGajiPokok" name="txtGajiPokok" MaxLength="16" class="numberonly form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-9">
                                <button type="button" class="btn btn-primary" id="InsertData">Save</button>
                                <button type="button" class="btn btn-primary" id="UpdateData">Update</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="KonfirmasiDelete" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="KonfirmasiDelete" role="dialog" aria-hidden="true" data-tor-parent="show">
