                                window.alert(response.ErrorMessage, 'Warning', { timeOut: 3000, "closeButton": true });
                            } else {
                                Swal.fire({ icon: "success", title: "Delete Data Success!", showConfirmButton: false, timer: 1800 });
                                $("#KonfirmasiDelete").modal("hide");
                                loadData();
                            }
                        },
                        error: function (xhr, textStatus, exceptionThrown) {
                             alert(xhr.responseText);
                        }
                    })
          });



        $('#CancelDelete').click(() => {
            $("#KonfirmasiDelete").modal("hide");
        });

        $("#btnExportExcel").click(function () {
             $.ajax({
                        type: "GET",
                        url: "@Url.Action("ExportExcelGrade", "Grade")",                         
                        success: function (data) { 
                            Swal.fire({ icon: "success", title: "Grade Download Excel Success!", showConfirmButton: false, timer: 1800 });
                            window.location = '/Grade/DownloadGrade';
                        },
                        error: function (data) {
                            console.log(data);
                            Swal.fire({ icon: "error", title: "Something went wrong.", showConfirmButton: false, timer: 1800 }); 
                        }
                    });
        });

    });


     // Add New
    function AddNewData() {
        resetForm();

        populateTipeGrade();
        $('#cboKodeGrade').focus();
        $("#divData").hide();
        $("#divForm").show();
        $('#InsertData').show();
        $('#UpdateData').hide();
    }

    function populateTipeGrade()
    {
        var url = '@Url.Action("GetListCode", "Grade")';
        $.ajax({
            type: "GET",
            url: url,
            success: function (data) {
                $('#cboKodeGrade').empty();
                $('#cboKodeGrade').append('<option value="" disabled selected>Pilih Kode Grade</option>');
                $.each(data, function (i, bind) {
                    $("#cboKodeGrade").append('<option value="' + bind.KodeTipeGrade + '">' + bind.TipeGrade + '</option>');
                });
            }
        })
    }

    function resetForm() {
            var $form = $('#formData');
            $form.validate().resetForm(); 

            $('#cboKodeGrade').val(''); 
            $('#txtGajiPokok').val(''); 

    }

    function DeleteRecord(id) {
        $("#txtIdMasterGrade").val(id);
        $("#KonfirmasiDelete").modal("show");
    }

    function backForm() {
        $("#divData").show();
        $("#divForm").hide();
    }

    function EditRecord(id) {
        resetForm();
        populateTipeGrade();
        var url = '@Url.Action("GetDataByCode", "Grade")';
        var data = "IdMasterGrade="+id;

        $("#divData").hide();
        $("#divForm").show();
        $.ajax({
            type: "GET",
            url: url,
            data: data,
            success: function (data) {
                var obj = JSON.parse(data);
                $("#txtIdMasterGrade").val(obj.IdMasterGrade);
                $("#cboKodeGrade").val(obj.GradeCode).trigger("change");
                $("#txtGajiPokok").val(obj.GaajiPokok); 
                $('#InsertData').hide();
                $('#UpdateData').show();
            }
        })
    }

</script>

