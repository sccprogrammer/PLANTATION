                        //    return '<a href="#" class="fa fa-pencil" onclick="EditRecord(\'' + row.IdMasterGrade + '\')" />  &nbsp; | &nbsp; <a href="javascript:void(0)" class="fa fa-trash-o disable"  />'
                        //} else {

                            return '<a href="#" Class="btn btn-sm btn-info" onclick="EditRecord(\'' + row.IdMasterGrade + '\')" /><i class="bi bi-pencil-square" ></i></a> <a Class="btn btn-sm btn-danger" onclick="DeleteRecord(\'' + row.IdMasterGrade + '\')"/><i class="bi  bi-eraser-fill" ></i></a>';
                        //}
                    }
                },
            ],

            //rowCallback: function (row, data) { responsiveHelper_dt_basic.createExpandIcon(row) },
            filter: true,
            info: true,
            ordering: true,
            //processing: true,
            //retrieve: true,
            bLengthChange: false,
            //lengthMenu: [[15, 20, -1], [15, 20, "All"]],
            //bFilter: true,
            //bSort: true,
            //bPaginate: true,
            //scrollX: true,
            //scrollX: "100%",
            searching:false, 
            pageLength:10, 
         });

        function loadData() {
            $.ajax({
                url: '@Url.Action("GetList","Grade")',
                type: "GET",
            }).done(function (result) {
                $("#divData").show();
                $("#divForm").hide();
                $("#tableID").DataTable().clear();
                $("#tableID").DataTable().rows.add(result).draw(false);
                $("#tableID").DataTable().columns.adjust().draw();
            }).fail(function (jqXHR, textStatus, errorThrown) {
                // needs to implement if it fails
            });
        }

         $('.numberonly').keypress(function (e) {
             var charCode = (e.which) ? e.which : event.keyCode
             if (String.fromCharCode(charCode).match(/[^\d.]/g))
                 return false;
         });

         $("#InsertData").click(function () {
            if ($("#formData").valid()) { 
                var dataObj = {
                    GradeCode: $('#cboKodeGrade').val(), 
                    BiayaGrade: $('#txtGajiPokok').val()
                };
                $.ajax({
                    type: "Post",
                    url: "@Url.Action("InsertData", "Grade")",
                    data: JSON.stringify(dataObj),
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                   success: function (data) {
                        //debugger;
                        if (!data.Status) {
                            Swal.fire({ icon: "error", title: data.Message, showConfirmButton: false, timer: 2000 });
                        } else {
                            Swal.fire({ icon: "success", title: "Data Saved Success!", showConfirmButton: false, timer: 2000 });
                            loadData();
                            $('#divData').show();
                            $('#divForm').hide();
                        }
                    },
                    error: function (xhr, textStatus, exceptionThrown) {
                         alert(xhr.responseText);
                    }
                })
            }

         });

        $("#UpdateData").click(function () {
            if ($("#formData").valid()) {
                var dataObj = {
                    IdMasterGrade: $('#txtIdMasterGrade').val(),
                    GradeCode: $('#cboKodeGrade').val(), 
                    BiayaGrade: $('#txtGajiPokok').val()
                };
                $.ajax({
                    type: "Post",
                    url: "@Url.Action("UpdateData", "Grade")",
                    data: JSON.stringify(dataObj),
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        //debugger;
                        if (!data.Status) {
                            Swal.fire({ icon: "error", title: data.Message, showConfirmButton: false, timer: 2000 });
                        } else {
                            Swal.fire({ icon: "success", title: "Data Saved Success!", showConfirmButton: false, timer: 2000 });
                            loadData();
                            $('#divData').show();
                            $('#divForm').hide();
                        }
                    },
                    error: function (xhr, textStatus, exceptionThrown) {
                         alert(xhr.responseText);
                    }
                })
            }

        });

          $("#ConfirmDelete").click(function () {
                var IdMasterGrade = $("#txtIdMasterGrade").val();
              $.ajax({
                  type: "Post",
                  url: '@Url.Action("DeleteData", "Grade")?IdMasterGrade='+IdMasterGrade,
                        success: function (data) {
                            debugger;
