    $(document).ready(function () {

        loadData();

        $('.select2').select2({ container: 'body' });

        $("#formData").validate(
        {
            rules:{   //Validation rules work on name attribute
                cboKodeGrade:{  //Condition Area
                       required:true
                },
                txtGajiPokok: {
                    required:true
                }
            },
            messages: {
                cboKodeGrade: {
                     required: "Kode Grade harus diisi"
                },
                txtGajiPokok: {
                     required: "Gaji Pokok harus diisi"
                }

            },
            highlight: function (element, errorClass, validClass) {
                $(element).parents('.form-control').removeClass('has-success').addClass('has-error');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).parents('.form-control').removeClass('has-error').addClass('has-success');
            },
            errorPlacement: function (error, element) {
    		        if(element.hasClass('select2') && element.next('.select2-container').length) {
        	        error.insertAfter(element.next('.select2-container'));
                }
                else {
                    error.insertAfter(element);
                }
            }
        });

         $("#tableID").dataTable({
            bDestroy: true,
            data: [],
            columns: [

                { "data": "GradeCode", className: "text-start" }, 
                {
                    "data": "GajiPokok", className: "text-end", "render": function (data, type, row) {
                        return parseFloat(row.GajiPokok).toLocaleString('id-ID');
                    }
                }, 
                {
                    "data": "Action",  className: "text-center", "render": function (data, type, row) {
