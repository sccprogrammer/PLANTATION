
@{
    ViewBag.Title = "Index";
    ViewBag.Root = "Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
  

<div class="row">
    <div class="col-lg-12">
        <div class="card info-card  ">

            <div class="card-body" id="divData">
                <div class="row">
                    <div class="col-lg-6 ">
                        <button class="btn  btn-primary btn-sm" id="btnAdd" onclick="AddNewData(0)" data-toggle="modal" data-target="#myModal" type="button"><i class="bi bi-plus-square"></i> Add</button>
                    </div>
                    <div class="col-lg-6 text-end">
                        <button class="btn  btn-success btn-sm" id="btnExportExcel" type="button"><i class="bi bi-file-earmark-excel-fill"></i> Export </button>
                    </div>
                </div>
                <div class="row pt-3">
                    <div class="col-lg-12">
                        <table id="tableID" class="table table-striped table-bordered" style="width:100% ;font-family:'Calibri';">
                            <thead>
                                <tr role="row">

                                    <th style="text-align:center;">
                                        Divisi
                                    </th>
                                    <th style="text-align:center;">
                                        Area
                                    </th>
                                    <th style="text-align:center;">
                                        Blok
                                    </th>
                                    <th style="text-align:center;">
                                        Tahun Tanam
                                    </th>
                                    <th style="text-align:center;">
                                        Luas Ha
                                    </th>
                                    <th style="text-align:center;">
                                       Jumlah PKK
                                    </th>
                                    <th style="text-align:center;">
                                        SPH
                                    </th>
                                    <th style="text-align:center;">
                                        Action
                                    </th>
                                </tr>
                            </thead>

                            <tbody></tbody>
                        </table>
                    </div>
                </div> 
            </div>

            <div class="card-body" id="divForm">
                <form id="formData">
                    <input type="text" style="display:none" name="txtIdBlok" id="txtIdBlok">
                    <div class="body">
                        <div class="row mb-3">
                            <div class="col-sm-9">
                                <button type="button" class="btn btn-danger" id="backData" onclick="backForm()"><i class="bi bi-arrow-left-square"></i> Back</button>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="cboDivisi" class="col-sm-3 col-form-label">Divisi</label>
                            <div class="col-sm-9">
                                <select id="cboDivisi" name="cboDivisi" class="select2 form-control"></select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="txtAreaBlok" class="col-sm-3 col-form-label">Area Blok</label>
                            <div class="col-sm-9">
                                <input type="text" id="txtAreaBlok" name="txtAreaBlok" MaxLength="50" class="text-uppercase form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="txtBlok" class="col-sm-3 col-form-label">Blok</label>
                            <div class="col-sm-9">
                                <input type="text" id="txtBlok" name="txtBlok" MaxLength="10" class="text-uppercase form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="cboTahunTanam" class="col-sm-3 col-form-label">Tahun Tanam</label>
                            <div class="col-sm-9">
                                <select id="cboTahunTanam" name="cboTahunTanam" class="select2 form-control"></select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="txtLuasHA" class="col-sm-3 col-form-label">Luas Ha</label>
                            <div class="col-sm-9">
                                <input type="text" id="txtLuasHA" name="txtLuasHA" maxlength="15" class="numberonly form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="txtJumlahPKK" class="col-sm-3 col-form-label">Jumlah PKK</label>
                            <div class="col-sm-9">
                                <input type="text" id="txtJumlahPKK" name="txtJumlahPKK" maxlength="15" class="numberonly form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="txtSPH" class="col-sm-3 col-form-label">SPH</label>
                            <div class="col-sm-9">
                                <input type="text" id="txtSPH" name="txtSPH" class="numberonly form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-9">
                                <button type="button" class="btn btn-primary" id="InsertData">Save</button>
                                <button type="button" class="btn btn-primary" id="UpdateData">Update</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="KonfirmasiDelete" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="KonfirmasiDelete" role="dialog" aria-hidden="true" data-tor-parent="show">
    <div class="modal-dialog modal-dialog-centered no-transform">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Delete Blok</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4>Data akan dihapus?</h4>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-danger" id="CancelDelete" data-dismiss="modal">Cancel</a>
                <a href="#" class="btn btn-primary" id="ConfirmDelete">Confirm</a>
            </div>
        </div>
    </div>
</div>

<style>
    div.dataTables_info {
        padding-top: 9px;
        font-size: 13px;
        font-weight: 700;
        font-style: italic;
        color: #969696;
    }

    a.page-link {
        font-size: 13px;
        font-weight: 600;
        margin-top: 5px;
    }

    div.dataTables_wrapper div.dataTables_filter input {
        margin-left: 0.5em;
        display: inline-block;
        width: 300px;
        height: 20px;
    }

    readonly {
        background: #fefe;
    }
</style>
<script>
    var Table;
    let CurrTahun = new Date().getFullYear();
    $(document).ready(function () {

        loadData();

        $('.select2').select2({ container: 'body' });

        $("#formData").validate(
            {
                rules: {   //Validation rules work on name attribute
                    cboDivisi: {
                        required: true
                    }
                },
                messages: {
                    cboDivisi: {
                        required: "Divisi harus diisi"
                    }
                },
                errorPlacement: function (error, element) {
                    if (element.hasClass('select2') && element.next('.select2-container').length) {
                        error.insertAfter(element.next('.select2-container'));
                    }
                }
            });

        $("#tableID").dataTable({
            bDestroy: true,
            data: [],
            columns: [

                { "data": "NamaDivisi", className: "text-center"},
                { "data": "AreaBlok", className: "text-center" },
                { "data": "Blok", className: "text-center" },
                {
                    "data": "TahunTanam", className: "text-center", "render": function (data, type, row) {
                        if (row.NamaDivisi == 'TOTAL ' + row.NamaDivisi.trim().substr(6)) {
                             return '';
                           } else {

                            return row.TahunTanam;
                         }
                    }
                },
                { "data": "LuasHA", className: "text-center" },
                { "data": "JumlahPKK", className: "text-center" },
                { "data": "SPH", className: "text-center" },
                {
                    "data": "Action", className: "text-center", "render": function (data, type, row) {
                         if (row.NamaDivisi == 'TOTAL ' + row.NamaDivisi.trim().substr(6)) {
                             return '';
                        //    return '<a href="#" class="fa fa-pencil" onclick="EditRecord(\'' + row.IDBPJS + '\')" />  &nbsp; | &nbsp; <a href="javascript:void(0)" class="fa fa-trash-o disable"  />'
                         } else {

                        return '<a href="#" Class="btn btn-sm btn-info" onclick="EditRecord(\'' + row.IdBlok + '\')" /><i class="bi bi-pencil-square" ></i></a> <a Class="btn btn-sm btn-danger" onclick="DeleteRecord(\'' + row.IdBlok + '\')"/><i class="bi  bi-eraser-fill" ></i></a>';
                         }
                    }
                },
            ],

            //rowCallback: function (row, data) { responsiveHelper_dt_basic.createExpandIcon(row) },


            fnRowCallback: function (row, data, index) {
                $(row).removeClass('odd');
                $(row).removeClass('even');
                if (data.NamaDivisi == 'TOTAL ' + data.NamaDivisi.trim().substr(6))
                {  
                    $(row).addClass('odd');
                    $('td', row).attr('style','font-weight:bold'); 
                   
                     
                } else {
                    
                    $(row).addClass('even'); 
                }
            },
            filter: false,
            //info: true,
            ordering: false,
            //processing: true,
            //retrieve: true,
            bLengthChange: false,
            //lengthMenu: [[15, 20, -1], [15, 20, "All"]],
            //bFilter: true,
            //bSort: true,
            //bPaginate: true,
            //scrollX: true,
             //scrollX: "100%",
            searching:true,
            //autoWidth: true,
            language: { search: '', searchPlaceholder: "Search..." },
            pageLength:10,
            //preDrawCallback: function () {
            //    // Initialize the responsive datatables helper once.
            //    if (!responsiveHelper_dt_basic) {
            //        responsiveHelper_dt_basic = new ResponsiveDatatablesHelper($('#tableID'), breakpointDefinition);
            //    }
            //},
            //drawCallback: function (oSettings) {
            //    responsiveHelper_dt_basic.respond();
            //}
         });

        function loadData() {
            $.ajax({
                url: '@Url.Action("GetList","Blok")',
                type: "GET",
            }).done(function (result) {
                $("#divData").show();
                $("#divForm").hide();
                $("#tableID").DataTable().clear();
                $("#tableID").DataTable().rows.add(result).draw(false);
                $("#tableID").DataTable().columns.adjust().draw();
            }).fail(function (jqXHR, textStatus, errorThrown) {
                // needs to implement if it fails
            });
        }

         $('.numberonly').keypress(function (e) {
             var charCode = (e.which) ? e.which : event.keyCode
             if (String.fromCharCode(charCode).match(/[^\d.]/g))
                 return false;
         });

         $("#InsertData").click(function () {
            if ($("#formData").valid()) {
                //var data = $("#formData").serialize();
                var dataObj = {
                    IdDivisi: $('#cboDivisi').val(),
                    AreaBlok: $('#txtAreaBlok').val(),
                    Blok: $('#txtBlok').val(),
                    TahunTanam: $('#cboTahunTanam').val(),
                    LuasHA: $('#txtLuasHA').val(),
                    JumlahPKK: $('#txtJumlahPKK').val(),
                    SPH: $('#txtSPH').val()
                };
                $.ajax({
                    type: "Post",
                    url: "@Url.Action("InsertData", "Blok")",
                    data: JSON.stringify(dataObj),
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        //debugger;
                        if (!data.Status) {
                            Swal.fire({ icon: "error", title: data.Message, showConfirmButton: false, timer: 2000 });
                        } else {
                            Swal.fire({ icon: "success", title: "Data Saved Success!", showConfirmButton: false, timer: 2000 });
                            loadData();
                            $('#divData').show();
                            $('#divForm').hide();
                        }
                    },
                    error: function (xhr, textStatus, exceptionThrown) {
                         alert(xhr.responseText);
                    }
                })
            }

         });

        $("#UpdateData").click(function () {
            if ($("#formData").valid()) {
                //var data = $("#formData").serialize();
               var dataObj = {
                    IdBlok: $('#txtIdBlok').val(),
                    IdDivisi: $('#cboDivisi').val(),
                    AreaBlok: $('#txtAreaBlok').val(),
                    Blok: $('#txtBlok').val(),
                    TahunTanam: $('#cboTahunTanam').val(),
                    LuasHA: $('#txtLuasHA').val(),
                    JumlahPKK: $('#txtJumlahPKK').val(),
                    SPH: $('#txtSPH').val()
                };
                $.ajax({
                    type: "Post",
                    url: "@Url.Action("UpdateData", "Blok")",
                    data: JSON.stringify(dataObj),
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        //debugger;
                        if (!data.Status) {
                            Swal.fire({ icon: "error", title: data.Message, showConfirmButton: false, timer: 2000 });
                        } else {
                            Swal.fire({ icon: "success", title: "Data Saved Success!", showConfirmButton: false, timer: 2000 });
                            loadData();
                            $('#divData').show();
                            $('#divForm').hide();
                        }
                    },
                    error: function (xhr, textStatus, exceptionThrown) {
                         alert(xhr.responseText);
                    }
                })
            }

        });

          $("#ConfirmDelete").click(function () {
                var IdBlok = $("#txtIdBlok").val();
              $.ajax({
                  type: "Post",
                  url: '@Url.Action("DeleteData", "Blok")?IdBlok='+IdBlok,
                        success: function (data) {
                            debugger;
                            if (!data.Status) {
                                window.alert(data.ErrorMessage, 'Warning', { timeOut: 3000, "closeButton": true });
                            } else {
                                Swal.fire({ icon: "success", title: "Delete Data Success!", showConfirmButton: false, timer: 1800 });
                                $("#KonfirmasiDelete").modal("hide");
                                loadData();
                            }
                        },
                        error: function (xhr, textStatus, exceptionThrown) {
                             alert(xhr.responseText);
                        }
                    })
          });

        $('#btnExportExcel').click(() => {
            $('#tableID').DataTable().buttons().trigger()
        });

          $('#txtBlok').keyup(function (e) {
              changeAreaBlok();
          });

         $('#cboTahunTanam').change(function (e) {
              changeAreaBlok();
         });
        
        $('#CancelDelete').click(() => {
            $("#KonfirmasiDelete").modal("hide");
        });

    });
    function changeAreaBlok() {
 
        var Blok = $('#txtBlok').val() !== undefined && $('#txtBlok').val() !==  null ?  $('#txtBlok').val() : '';
        var TahunTanam = $('#cboTahunTanam').val() !==  undefined && $('#cboTahunTanam').val() !==  null ? $('#cboTahunTanam').val() : '';
        var AreaBlok = Blok + TahunTanam;
        $('#txtAreaBlok').val(AreaBlok);
    }
     // Add New
    function AddNewData() {
        resetForm();
        $('#cboDivisi').focus();
        $("#divData").hide();
        $("#divForm").show();
        $('#InsertData').show();
        $('#UpdateData').hide();
    }

    function populateTahun(cbotahun, tahunGet)
    {
        $('#'+cbotahun+'').empty();
        $('#'+cbotahun+'').append('<option value="" disabled selected>Pilih Tahun</option>');
        var awal = 2015;
        var akhir = 2040;
        while (awal < akhir) {
            if (tahunGet == awal) {
                $('#'+cbotahun+'').append('<option value="' + awal + '" selected>' + awal + '</option>');
            } else {
                $('#'+cbotahun+'').append('<option value="' + awal + '">' + awal + '</option>');
            }

            awal++;
        }

    }
    
    function populateDivisi()
    {
        var url = '@Url.Action("GetList", "Divisi")';
        $.ajax({
            type: "GET",
            url: url,  
            success: function (data) {
                $('#cboDivisi').empty();
                $('#cboDivisi').append('<option value="" disabled selected>Pilih Divisi</option>');
                $.each(data, function (i, bind) {
                    $("#cboDivisi").append('<option value="' + bind.IdDivisi + '">' + bind.NamaDivisi + '</option>');
                });
            }
        })

    }
    function resetForm() {
            var $form = $('#formData');
            $form.validate().resetForm();

            populateDivisi();
            populateTahun('cboTahunTanam', CurrTahun);
            $('#txtIdBlok').val(''),
            $('#cboDivisi').val(''),
            $('#txtAreaBlok').val(''),
            $('#txtBlok').val(''),
            $('#cboTahunTanam').val(''),
            $('#txtLuasHA').val('0'),
            $('#txtJumlahPKK').val('0'),
            $('#txtSPH').val(''); 
    }

    function DeleteRecord(id) {
        $("#txtIdBlok").val(id);
        $("#KonfirmasiDelete").modal("show");
    }

    function backForm() {
        $("#divData").show();
        $("#divForm").hide();
    }

    function EditRecord(id) {
        resetForm();
        var url = '@Url.Action("GetDataByCode", "Blok")';
        var data = "IdBlok="+id;
        $("#divData").hide();
        $("#divForm").show();
        $.ajax({
            type: "GET",
            url: url,
            data: data,
            success: function (data) {
                var obj = JSON.parse(data);
                $("#txtIdBlok").val(obj.IdBlok);
                $("#cboDivisi").val(obj.IdDivisi).trigger('change');
                $("#txtAreaBlok").val(obj.AreaBlok);
                $("#txtBlok").val(obj.Blok);
                $("#cboTahunTanam").val(obj.TahunTanam).trigger('change');
                $("#txtLuasHA").val(obj.LuasHA);
                $("#txtJumlahPKK").val(obj.JumlahPKK);
                $("#txtSPH").val(obj.SPH);
                $('#InsertData').hide();
                $('#UpdateData').show();
            }
        })
    }

</script>

