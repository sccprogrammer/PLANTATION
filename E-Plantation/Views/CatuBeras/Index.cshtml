        $('#InsertData').show();
        $('#UpdateData').hide();
    }

    function populateTahun(cbotahun, tahunGet)
    {
        $('#'+cbotahun+'').empty();
        $('#'+cbotahun+'').append('<option value="" disabled selected>Pilih Tahun</option>');
        var awal = 2015;
        var akhir = 2040;
        while (awal < akhir) {
            if (tahunGet == awal) {
                $('#'+cbotahun+'').append('<option value="' + awal + '" selected>' + awal + '</option>');
            } else {
                $('#'+cbotahun+'').append('<option value="' + awal + '">' + awal + '</option>');
            }

            awal++;
        }

    }

