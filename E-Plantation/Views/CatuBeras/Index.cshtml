    function EditRecord(id) {
        resetForm();
        populateTahun('cboTahun', '')
        populateStatusMartial();
        var url = '@Url.Action("GetDataByCode", "CatuBeras")';
        var data = "IdCatuBeras="+id+"&Tahun="+ $("#cboTahunSearch").val();

        $("#divData").hide();
        $("#divForm").show();
        $.ajax({
            type: "GET",
            url: url,
            data: data,
            success: function (data) {
                var obj = JSON.parse(data);
                $("#txtIdCatuBeras").val(obj.IdCatuBeras);
                $("#cboTahun").val(obj.Tahun).trigger("change");
                $("#cboStatusMartial").val(obj.StatusMartial).trigger("change");
                $("#txtPekerja").val(obj.Pekerja);
                $("#txtTanggungan").val(obj.Tanggungan);
                $("#txtHargaBeras").val(obj.HargaBeras);
                HitungTotal();
                $('#InsertData').hide();
                $('#UpdateData').show();
            }
        })
    }

    function populateStatusMartial()
    {
        var url = '@Url.Action("GetList", "Martial")';
        $.ajax({
            type: "GET",
            url: url,
            success: function (data) {
                $('#cboStatusMartial').empty();
                $('#cboStatusMartial').append('<option value="" disabled selected>Pilih Status</option>');
                    $.each(data, function (i, bind) { 
                         $("#cboStatusMartial").append('<option value="' + bind.KodeMartial + '">' + bind.KodeMartial + '</option>');
                       
                    });
            }
        })

    }

    function populateHargaBeras()
    {
        var url = '@Url.Action("GetList", "SetVariable")';
