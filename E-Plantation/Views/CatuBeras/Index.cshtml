            $('#cboStatusMartial').val('');
            $('#txtPekerja').val('');
            $('#txtTanggungan').val('');
            $('#txtTotal').val('');
            $('#txtNilaiHarga').val('');
    }

    function DeleteRecord(id) {
        $("#txtIdCatuBeras").val(id);
        $("#KonfirmasiDelete").modal("show");
    }

    function backForm() {
        $("#divData").show();
        $("#divForm").hide();
