      // Hitung Total
    function HitungTotal() {
        var pekerja =   $('#txtPekerja').val();
        var tanggungan =$('#txtTanggungan').val();
        pekerja = isNaN(parseFloat(pekerja)) ? 0 : parseFloat(pekerja);
        tanggungan = isNaN(parseFloat(tanggungan)) ? 0 : parseFloat(tanggungan);
        var total =  pekerja +  tanggungan;
        $('#txtTotal').val(String(total));

        var hargaBeras = $("#txtHargaBeras").val();
        var totalHarga = total * parseFloat(hargaBeras);
        $('#txtNilaiHarga').val(String(totalHarga));

    }
     // Add New
    function AddNewData() {
        resetForm();

