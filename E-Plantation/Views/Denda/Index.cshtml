     // Add New
    function AddNewData() {
        resetForm();
         
        populateTipeDenda();
        $('#cboTipeDenda').focus();
        $("#divData").hide();
        $("#divForm").show();
        $('#InsertData').show();
        $('#UpdateData').hide();
    }

    function populateTipeDenda()
    {
        var url = '@Url.Action("GetList", "TipeDenda")';
        $.ajax({
            type: "GET",
            url: url,  
            success: function (data) {
                $('#cboTipeDenda').empty();
                $('#cboTipeDenda').append('<option value="" disabled selected>Pilih Tipe Denda</option>');
                $.each(data, function (i, bind) {
                    $("#cboTipeDenda").append('<option value="' + bind.TipeDenda + '">' + bind.TipeDenda + '</option>');
                });
            }
        })
    }
     
    function resetForm() {
            var $form = $('#formData');
            $form.validate().resetForm();
            //$("#formData").find('.form-group').removeClass("state-error");
            //$("#formData").find('.form-group').removeClass("state-success");

            $('#cboTipeDenda').val('');
            $('#txtKeteranganDenda').val('');
            $('#txtBiayaDenda').val('');
            $("#chkStatusDenda").prop("checked", true);

    }

    function DeleteRecord(id) {
        $("#IdDenda").val(id);
        $("#KonfirmasiDelete").modal("show");
    }

    function backForm() {
        $("#divData").show();
        $("#divForm").hide();
    }

    function EditRecord(id) {
        resetForm(); 
        populateTipeDenda();
        var url = '@Url.Action("GetDataByCode", "Denda")';
        var data = "IdDenda="+id;

        $("#divData").hide();
        $("#divForm").show();
        $.ajax({
            type: "GET",
            url: url,
            data: data,
            success: function (data) {
                var obj = JSON.parse(data);
                $("#IdDenda").val(obj.IdDenda);
                $("#cboTipeDenda").val(obj.TipeDenda).trigger("change");
                $("#txtKeteranganDenda").val(obj.KeteranganDenda);
                $("#txtBiayaDenda").val(obj.BiayaDenda);
                var CheckData;
                (obj.StatusDenda == "AKTIF") ? CheckData = true : CheckData = false;
                $("#chkStatusDenda").prop("checked", CheckData);
                $('#InsertData').hide();
                $('#UpdateData').show();
            }
        })
    }

